{
  "name": "shadow-dom-selector",
  "version": "1.0.0",
  "description": "A very small JavaScript utility to query DOM elements through the Shadow Dom subtrees in a sync or an async way",
  "main": "index.js",
  "author": "ElChiniNet",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && rollup --config rollup.config.js --bundleConfigAsCjs && yarn modify-dts",
    "clean": "rm -rf dist",
    "modify-dts": "replace-in-file --configFile=config.replace.js",
    "demo": "rollup --config rollup.test.config.js --bundleConfigAsCjs -w",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:ci": "start-server-and-test demo http://localhost:3000 test"
  },
  "devDependencies": {
    "cypress": "^13.5.0",
    "replace-in-file": "^7.0.2",
    "rollup": "^4.3.1",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.4.5",
    "start-server-and-test": "^2.0.2",
    "typescript": "^5.2.2"
  }
}
